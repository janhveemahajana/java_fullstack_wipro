package com.wipro.thread;

public class ThreadEx1 {

	public static void main(String[] args) {
		
		
		Thread numTh = new Thread(() -> {
            for (int i = 1; i <= 10; i++) {
                System.out.println("Number: " + i);
                try {
                    Thread.sleep(500);
                } catch (InterruptedException e) {
                    e.printStackTrace();
                }
            }
        });
		
		Thread alphabetTh = new Thread(() -> {
            for (char c = 'A'; c <= 'J'; c++) {
                System.out.println("Alphabet: " + c);
                try {
                    Thread.sleep(500);
                } catch (InterruptedException e) {
                    e.printStackTrace();
                }
            }
        });
		
		numTh.start();
		alphabetTh.start();
	}

}
