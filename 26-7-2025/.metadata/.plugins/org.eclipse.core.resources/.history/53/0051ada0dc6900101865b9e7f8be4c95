package com.wipro.thread;

public class NumberThread extends Thread {


		 @Override
		    public void run() {
		        for (int i = 1; i <= 10; i++) {
		            System.out.println("Number: " + i);
		            try {
		                Thread.sleep(1000); // pause for half a second
		            } catch (InterruptedException e) {
		                e.printStackTrace();
		            }
		        }
		    }

	}


